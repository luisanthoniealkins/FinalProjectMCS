<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_prf">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="25dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/container">

                <ImageButton
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/profilepictemplate"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/id_fragment_setting_tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="admin.aturinaja@example.com"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:layout_marginTop="30dp"/>
                    <TextView
                        android:id="@+id/id_fragment_setting_tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0878 - 1212 - 0001"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Verified Account"
                        android:textSize="14sp"
                        android:textColor="@color/eletricBlue"
                        android:textStyle="italic"/>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Account"
                android:textSize="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:background="@drawable/container"
                android:paddingTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="23dp"
                        android:background="@drawable/ic_history" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/acc_bg_btn"
                        android:text="Travel History"
                        android:textSize="13sp"
                        android:textColor="@color/gray"
                        android:textAlignment="textStart"
                        android:layout_marginEnd="23dp"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="23dp"
                        android:background="@drawable/ic_frnds" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/acc_bg_btn"
                        android:text="Invite Friends"
                        android:textSize="13sp"
                        android:textColor="@color/gray"
                        android:textAlignment="textStart"
                        android:layout_marginEnd="23dp"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="23dp"
                        android:background="@drawable/ic_help" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/acc_bg_btn"
                        android:text="Help"
                        android:textSize="13sp"
                        android:textColor="@color/gray"
                        android:textAlignment="textStart"
                        android:layout_marginEnd="23dp"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="General"
                android:textSize="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="332dp"
                android:background="@drawable/container"
                android:paddingTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="23dp"
                        android:background="@drawable/ic_chglng" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/acc_bg_btn"
                        android:text="Change Language"
                        android:textSize="13sp"
                        android:textColor="@color/gray"
                        android:textAlignment="textStart"
                        android:layout_marginEnd="23dp"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="23dp"
                        android:background="@drawable/ic_nghtmd" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/acc_bg_btn"
                        android:text="Night Mode"
                        android:textSize="13sp"
                        android:textColor="@color/gray"
                        android:textAlignment="textStart"
                        android:layout_marginEnd="23dp"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="23dp"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/ic_trmsrv" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/acc_bg_btn"
                        android:text="Terms of Service"
                        android:textSize="13dp"
                        android:textColor="@color/gray"
                        android:textAlignment="textStart"
                        android:layout_marginEnd="23dp"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="23dp"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/ic_prvcy" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/acc_bg_btn"
                        android:text="Privacy policy "
                        android:textSize="13dp"
                        android:textColor="@color/gray"
                        android:textAlignment="textStart"
                        android:layout_marginEnd="23dp"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="23dp"
                        android:background="@drawable/ic_rate" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/acc_bg_btn"
                        android:text="Rate Aturinaja"
                        android:textSize="13dp"
                        android:textColor="@color/gray"
                        android:textAlignment="textStart"
                        android:layout_marginEnd="23dp"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.1.0"
                android:layout_marginLeft="10dp"
                android:textSize="14dp"/>

            <Button
                android:id="@+id/id_fragment_setting_btn_logout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Logout"
                android:textColor="@color/white"
                android:background="@drawable/logoutbtn"
                android:layout_marginBottom="35dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>