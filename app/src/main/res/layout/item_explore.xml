<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_item_explore_iv_preview"
            android:layout_width="120dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/id_item_explore_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Majapahit"
                android:textColor="@color/eletricBlue"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/id_item_explore_tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl. Majapahit VII No.31C"
                android:textColor="@color/LightDark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/id_item_explore_iv_flag"
                    android:layout_width="35dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:id="@+id/id_item_explore_tv_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/LightDark"
                    android:text="Indonesia"
                    android:layout_marginLeft="5dp"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_rating"/>

                <TextView
                    android:id="@+id/id_item_explore_tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3/5"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/LightDark"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_visitor"/>

                <TextView
                    android:id="@+id/id_item_explore_tv_visitor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20K/Year"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/LightDark"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_time"/>

                <TextView
                    android:id="@+id/id_item_explore_tv_open_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:00 - 12:11, 15:00 - 16:11"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/LightDark"/>

            </LinearLayout>

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:orientation="horizontal">-->

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Best Time"/>-->

<!--                <TextView-->
<!--                    android:id="@+id/id_item_explore_tv_best_time"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="09:00 - 10:00"/>-->

<!--            </LinearLayout>-->

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>