<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DestinationDetailActivity">

    <TextView
        android:id="@+id/id_activity_detaildes_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/id_activity_detaildes_iv_preview_url"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating : "/>

    <TextView
        android:id="@+id/id_activity_detaildes_tv_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.5/10"/>

    <Button
        android:id="@+id/id_activity_detaildes_btn_start_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Plan"
        android:onClick="clickPlan"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address : "/>

    <TextView
        android:id="@+id/id_activity_detaildes_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jalan Kepayang"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country : "/>

    <TextView
        android:id="@+id/id_activity_detaildes_tv_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indonesia"/>

    <ImageView
        android:id="@+id/id_activity_detaildes_iv_flag_url"
        android:layout_width="80dp"
        android:layout_height="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visitors : "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily : "/>

    <TextView
        android:id="@+id/id_activity_detaildes_tv_visitor_daily"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="78"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total : "/>

    <TextView
        android:id="@+id/id_activity_detaildes_visitor_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1290"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Time : "/>

    <TextView
        android:id="@+id/id_activity_detaildes_tv_open_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07.00 : 09.45"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best Time : "/>

    <TextView
        android:id="@+id/id_activity_detaildes_tv_best_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07.00 : 09.45"/>


</LinearLayout>